<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="DefaultListItemStyle">
        <item name="android:background">@drawable/light_gray_bottom_line</item>
        <item name="android:paddingTop">@dimen/default_between_list_items_padding</item>
        <item name="android:paddingBottom">@dimen/default_between_list_items_padding</item>
        <item name="android:paddingLeft">@dimen/default_activity_padding</item>
        <item name="android:paddingRight">@dimen/default_activity_padding</item>
    </style>

    <style name="LevelsListItemStyle">
        <item name="android:background">@drawable/light_gray_bottom_line</item>
        <item name="android:paddingTop">@dimen/default_between_list_items_padding</item>
        <item name="android:paddingBottom">@dimen/default_between_list_items_padding</item>
        <item name="android:paddingLeft">@dimen/padding_4</item>
        <item name="android:paddingRight">@dimen/default_activity_padding</item>
    </style>

    <style name="RankingListItemStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RankingListItemStyle.Name" parent="RankingListItemStyle">
        <item name="android:layout_marginLeft">@dimen/default_activity_padding</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/grayStone</item>
    </style>

    <style name="RankingListItemStyle.Points" parent="RankingListItemStyle">
        <item name="android:textColor">@color/grayStoneDark</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:width">180dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/greenGoblin</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SignInEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/whiteHalfTransparent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SignInButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:width">180dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/greenGoblin</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NoButtonStyle" parent="SignInButtonStyle">
        <item name="android:textColor">@color/redDarkWarning</item>
    </style>

    <style name="GameDetailsStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerViewValueStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/grayStone</item>
        <item name="android:padding">@dimen/padding_2</item>
        <item name="android:layout_marginLeft">@dimen/padding_8</item>
    </style>

    <style name="BattleFieldLineStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/padding_2</item>
    </style>

</resources>
