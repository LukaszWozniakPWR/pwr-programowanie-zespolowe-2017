<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.pwr.zespolowe2016.cardgame.game.views.PlayerBattleFieldView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            app:lanesOrder="catapultsFirst"/>

        <View
            android:layout_width="8dp"
            android:layout_margin="@dimen/padding_4"
            android:layout_height="match_parent"
            android:background="@color/greenGoblinDark"/>

        <com.pwr.zespolowe2016.cardgame.game.views.PlayerBattleFieldView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:lanesOrder="swordsFirst"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.pwr.zespolowe2016.cardgame.game.views.PlayerView
            android:id="@+id/yourPlayerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_4"/>

        <com.pwr.zespolowe2016.cardgame.game.views.PlayerView
            android:id="@+id/otherPlayerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_4"/>
    </LinearLayout>

</LinearLayout>